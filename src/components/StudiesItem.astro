---
interface Props {
  title: string;
  date: string;
}
const { title, date } = Astro.props;
---

<li class="mb-10 ms-4">
  <div
    class="absolute w-3 h-3 bg-gray-700 rounded-full mt-1.5 -start-1.5 border border-gray-900 dark:border-white dark:bg-gray-200"
  >
  </div>
  <time class="mb-1 text-sm font-normal leading-none text-gray-600 dark:text-sky-200/80"
    >{date}</time
  >
  <h3 class="text-lg font-semibold text-yellow-600 dark:text-yellow-200">
    {title}
  </h3>
</li>
