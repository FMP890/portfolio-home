---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/Linkedin.astro";
import SocialPill from "../components/SocialPill.astro";
import GithubIcon from "../components/icons/Github.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Studies from "../components/Studies.astro";
import StudiesIcon from "../components/icons/StudiesIcon.astro";
import CodeIcon from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
---

<Layout title="Portfolio de Facundo Martinez - Desarrolador y Programador">
  <main class="px-4">
    <SectionContainer class="py-32 pb-20">
      <div class="flex gap-4 mb-4">
        <img
          class="rounded-full shadow-lg size-16"
          src="/profilePhoto.jpg"
          alt="photo"
        />
        <a
          href="https://www.linkedin.com/in/facundo-martinez-23a4831b7/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center transition md:hover:scale-105"
        >
          <Badge>Avaiable for hire</Badge>
        </a>
      </div>
      <h1
        class="text-gray-800 dark:text-white text-2xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hi, im Facundo
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span>Looking for new job experiences</span>. <span
          class="text-yellow-500 dark:text-yellow-200/90"
        >
          Web and Application Programmer
        </span><span class="text-sky-400/70 dark:text-sky-300/90"
          >from Montevideo, Uruguay</span
        >. <span class="opacity-75"
          >I enjoy enhancing my coding skills and expanding my knowledge.</span
        >
      </h2>
      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill
          href="https://www.linkedin.com/in/facundo-martinez-23a4831b7/"
        >
          <LinkedInIcon class="size-4 md:size-6" />LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/Maydik890">
          <GithubIcon class="size-4 md:size-6" />GitHub
        </SocialPill>
        <SocialPill href="mailto:facundomarpar@gmail.com">
          <MailIcon class="size-4 md:size-6" />facundomarpar@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>
    <SectionContainer id="about">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <StudiesIcon class="size-7" />
        Studies
      </h2>
      <Studies />
    </SectionContainer>
    <SectionContainer id="projects">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <CodeIcon class="size-7" />
        Projects
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
